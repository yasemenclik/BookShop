
@model IEnumerable<BookShop.Core.Book.Books>

<div class="container-fluid">
    <br /><br /><br /><br /><br /><br />
    <h1 class="text-center text-secondary">Kitaplar</h1>
    <p>
        <a class="btn btn-outline-info" asp-action="Create">Yeni Kitap Ekle</a>
    </p>

    <table class="table">

        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatorUserId)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatorUserId)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                        <a class="btn btn-success" asp-action="Index" asp-controller="Books" asp-route-id="@item.Id">Detaylar</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
